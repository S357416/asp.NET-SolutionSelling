@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@using SolutionSelling.Services
@inject CartService CartService

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User) && CartService.CartCount() > 0)
{
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Cart" asp-action="Index">
                <button type="submit" class="nav-link btn btn-link text-dark">Show Cart (@CartService.CartCount())</button>
        </form>
    </li>
}
</ul>
